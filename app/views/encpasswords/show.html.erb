<%- model_class = Encpassword -%>
<div class="page-header">
  <h1>Your encrypted passwords:</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:encrypted_password) %>:</strong></dt>
  
  <dt><strong><%= model_class.human_attribute_name(:service) %>:</strong></dt>
  <dd><%= @encpassword.service %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              encpasswords_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("Regenerate Password")),
              edit_encpassword_path(@encpassword), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              encpassword_path(@encpassword),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
